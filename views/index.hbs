<body>
	{{#if user}}
		<div class="col123 row1">
			<h1>Welcome {{user.username}}</h1>
		</div>
		<div class="col45 row1">
			<a href="/log-out">Log Out</a>
		</div>
		<div class="col234 row234">
			<h2>Select one</h2>
			<a href="/watches/all" class="none">
				<img id="watch" src="/images/watch.svg">
			</a>
			<a href="/jewelery/all" class="none">
				<img id="diamond" src="/images/diamond.svg">
			</a>
		</div>
	{{else}}
		<div class="col12345 row1">
			<h1 class="logo">San Francisco Gemological Appraisals</h1>
		</div>
		<div class="col12 row2">
			<h2>Log In</h2>
		</div>
		<div class="col45 row2">
			<a href="/sign-up">Sign up</a>
		</div>
		<div class="col234 row345">
			<form action="/log-in" method="POST">
				<div class="col23 row34">
					<p>
						<label for="username">Username</label>
						<input name="username" placeholder="username" type="text" />
					</p>
					<p>
						<label for="password">Password</label>
						<input name="password" placeholder="password" type="password" />
					</p>
				</div>
				<div class="col23 row5 form">
					<button>Log In</button>
				</div>
			</form>
		</div>
	{{/if}}
</body>