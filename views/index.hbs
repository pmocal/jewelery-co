<body>
	{{#if user}}
		<div class="row1">
			<h1>Welcome {{user.username}}</h1>
		</div>
		<div class="row2">
			<a class="inline" href="/jewelery/all">View past jewelery appraisals</a>
			<a class="inline" href="/watches/all">View past watch appraisals</a>
			<a class="inline" href="/jewelery/create">Create new jewelery appraisal</a>
			<a class="inline" href="/watches/create">Create new watch appraisal</a>
		</div>
		<div class="row3">
			<a href="/log-out">Log Out</a>
		</div>
	{{else}}
		<div class="row1">
			<h1>Log In</h1>
		</div>
		<div class="login-row">
			<form action="/log-in" method="POST">
				<div class="inline">
					<label for="username">Username</label>
					<input name="username" placeholder="username" type="text" />
				</div>
				<div class="inline">
					<label for="password">Password</label>
					<input name="password" placeholder="password" type="password" />
				</div>
				<div>
					<button>Log In</button>
				</div>
			</form>
		</div>
		<div class="row3">
			<a href="/sign-up">Sign up</a>
		</div>
	{{/if}}
</body>