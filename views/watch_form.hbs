				{{/if}}
			</p>
			<p>
				<label for="bezelMaterial">Bezel Material: </label>
				{{#if watch}}
					<input id="bezelMaterial" type="text" name="bezelMaterial" value="{{watch.bezelMaterial}}">
				{{else}}
					<input id="bezelMaterial" type="text" name="bezelMaterial">
				{{/if}}
			</p>
			<p>
				<label for="dial">Dial: </label>
				{{#if watch}}
					<input id="dial" type="text" name="dial" value="{{watch.dial}}">
				{{else}}
					<input id="dial" type="text" name="dial">
				{{/if}}
			</p>
			<p>
