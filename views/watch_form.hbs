<body>
	<div class="col123 row1">
		<h1 class="merchandise-title">{{title}}</h1>
	</div>
	<div class="col23 row234 merchandise-items">
		<form method="POST" enctype="multipart/form-data" action=''>
			<p>A unique Report ID will be automatically generated.</p>
			<p>
				<label for="date">Date: </label>
				{{#if watch}}
					<input id="date" type="text" name="date" value="{{watch.date}}">
				{{else}}
					<input id="date" type="text" name="date">
				{{/if}}
			</p>
			<p>
				<label for="customerInfo">Customer Info: </label>
				{{#if watch}}
					<input id="customerInfo" type="text" name="customerInfo" value="{{watch.customerInfo}}">
				{{else}}
