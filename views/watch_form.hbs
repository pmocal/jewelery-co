					<input id="estimatedRetailReplacementValue" type="text" name="estimatedRetailReplacementValue" value="{{watch.estimatedRetailReplacementValue}}">
				{{else}}
					<input id="estimatedRetailReplacementValue" type="text" name="estimatedRetailReplacementValue">
				{{/if}}
			</p>
			<input type="file" name="file">
			<div>
				<button type="submit">Submit</button>
			</div>
		</form>
		{{#if errors}}
			<ul>
				{{#each errors}}
					<li>{{this.msg}}</li>
				{{/each}}
			</ul>
		{{/if}}
	</div>
	<div class="col4 row1">
		<a href="/">Back</a>
	</div>
</body>