<body>
	<div class="col123 row1">
		<h1 class="merchandise-title">{{title}}</h1>
	</div>
	<div class="col23 row234 merchandise-items">
		<p>Report ID: {{jewelery.reportId}}</p>
		<img src="/uploads/{{jewelery.reportId}}.jpg" class="merchandise-photo">
		<p>Date: {{jewelery.date}}</p>
		<p>Customer Info: {{jewelery.customerInfo}}</p>
		<p>Description: {{jewelery.description}}</p>
		<p>Stone Type: {{jewelery.stoneType}}</p>
		<p>Jewelery Weight: {{jewelery.jeweleryWeight}}</p>
		<p>Total Stones: {{jewelery.totalStones}}</p>
		<p>Comments: {{jewelery.comments}}</p>
		<p>Serial Number: {{jewelery.serialNumber}}</p>
		<p>Metal Type: {{jewelery.metalType}}</p>
		<p>Carat Weight: {{jewelery.caratWeight}}</p>
		<p>Color Grade: {{jewelery.colorGrade}}</p>
		<p>Clarity Grade: {{jewelery.clarityGrade}}</p>
		<p>Estimated Retail Replacement Value: {{jewelery.estimatedRetailReplacementValue}}</p>
	</div>
	<div class="col4 row1">
		<a href="/">Back</a>
	</div>
	<div class="footer col4 row4">
		<form method="POST" action="">
			<input name="reportId" type="hidden" value="{{jewelery.reportId}}" />
			<input name="imageUrl" type="hidden" value="/uploads/{{jewelery.reportId}}.jpg" />
			<input name="date" type="hidden" value="{{jewelery.date}}" />
			<input name="customerInfo" type="hidden" value="{{jewelery.customerInfo}}" />
			<input name="description" type="hidden" value="{{jewelery.description}}" />
			<input name="stoneType" type="hidden" value="{{jewelery.stoneType}}" />
			<input name="jeweleryWeight" type="hidden" value="{{jewelery.jeweleryWeight}}" />
			<input name="totalStones" type="hidden" value="{{jewelery.totalStones}}" />
			<input name="comments" type="hidden" value="{{jewelery.comments}}" />
			<input name="serialNumber" type="hidden" value="{{jewelery.serialNumber}}" />
			<input name="metalType" type="hidden" value="{{jewelery.metalType}}" />
			<input name="caratWeight" type="hidden" value="{{jewelery.caratWeight}}" />
			<input name="colorGrade" type="hidden" value="{{jewelery.colorGrade}}" />
			<input name="clarityGrade" type="hidden" value="{{jewelery.clarityGrade}}" />
			<input name="estimatedRetailReplacementValue" type="hidden" value="{{jewelery.estimatedRetailReplacementValue}}" />
			<input name="emailAddress" type="text" placeholder="Enter an email address if you would like the PDF to be delivered there" />
			<button>Generate PDF</button>
		</form>
		{{> CRUD_footer id=jewelery._id }}
	</div>
</body>